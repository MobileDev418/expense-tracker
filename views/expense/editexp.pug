extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Edit Expense

  form(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
    label(class='col-md-2 col-form-label font-weight-bold', for='date') Date
    .col-md-8
        input.form-control(type='date', name='date', id='date', value= expItem.date, autofocus=true)
    .form-group.row
    label(class='col-md-2 col-form-label font-weight-bold', for='description') Description
    .col-md-8
        input.form-control(type='text', name='description', id='description', value= expItem.description)
    .form-group.row
    label(class='col-md-2 col-form-label font-weight-bold', for='amount') Amount
    .col-md-8
        input.form-control(type='text', name='amount', id='amount', value= expItem.amount)
    .form-group.row
    label(class='col-md-2 col-form-label font-weight-bold', for='comment') Comment
    .col-md-8
        input.form-control(type='text', name='comment', id='comment', value= expItem.comment)
    p
    .form-group
      .col-md-8
        button.btn-info.add-new(type='submit')
          | Edit Expense