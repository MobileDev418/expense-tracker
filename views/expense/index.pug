extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    .table-title
      .row
        .col-sm-9
          h3
            | Expense
        .col-sm-3
          a.btn.btn-info.add-new(href='/expense/add', role='button')
            i.fa.fa-plus
              | Add New

  table.table.table-bordered
    thead
      tr
        th Date
        th Description
        th Amount
        th Comment
        th Action
    tbody
      each expense in expenseList
        tr
          td= expense.date
          td= expense.description
          td= expense.amount
          td= expense.comment
          td
            a.add(title='Add', href='/expense/add')
              i.material-icons &#xE03B;
            a.edit(title='Edit', href='/expense/edit/'+expense.id)
              i.material-icons &#xE254;
            a.delete(title='Delete', href='/expense/del/'+expense.id)
              i.material-icons &#xE872;
    